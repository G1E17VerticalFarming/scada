                <Font name="Arial Black" size="20.0"/>
            </font>
        </Label>
        <TableView fx:id="tableviewPLC" layoutX="24.0" layoutY="115.0" prefHeight="492.0" prefWidth="975.0">
            <columns>
                <TableColumn prefWidth="48.0" resizable="false" text="ID"/>
                <TableColumn prefWidth="129.0" resizable="false" text="ID-Address"/>
                <TableColumn prefWidth="58.0" resizable="false" text="Port"/>
                <TableColumn prefWidth="65.0" resizable="false" text="Status"/>
                <TableColumn prefWidth="75.0" resizable="false" text="Temp1"/>
                <TableColumn prefWidth="75.0" resizable="false" text="Temp2"/>
